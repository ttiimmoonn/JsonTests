<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE scenario SYSTEM "sipp.dtd">
<scenario name = "uas_script">


<User variables="chk_req_100rel" />
<Reference variables="chk_req_100rel" />



<recv request="INVITE">
    <action>
        <ereg regexp="Require:.*100rel.*" search_in="msg" check_it="true" assign_to="chk_req_100rel"/>
    </action>
</recv>

<send>
<![CDATA[
    SIP/2.0 100 Trying
    [last_Via:]
    [last_From:]
    [last_To:]
    [last_Call-ID:]
    [last_CSeq:]
    Content-Length: 0
]]>
</send>

<send>
<![CDATA[
    SIP/2.0 420 Bad Extension
    [last_Via:]
    [last_From:]
    [last_To:]
    [last_Call-ID:]
    [last_CSeq:]
    Unsupported: 100rel
    Content-Length: 0
]]>
</send>


<recv request="ACK"></recv>


<recv request="INVITE">
<action>
    <!--Чистим check от прошлого INVITE-->
    <assign assign_to="chk_req_100rel" value="" />
    <ereg regexp="Require:.*100rel.*" search_in="msg" check_it_inverse="true" assign_to="chk_req_100rel"/>
    <ereg regexp="[0-9]+" search_in="hdr" header="To:" assign_to="uas_number" />
</action>
</recv>

<send>
<![CDATA[
    SIP/2.0 100 Trying
    [last_Via:]
    [last_From:]
    [last_To:]
    [last_Call-ID:]
    [last_CSeq:]
    Content-Length: 0
]]>
</send>


<send>
<![CDATA[
    SIP/2.0 180 Ringing
    [last_Via:]
    [last_From:]
    [last_To:];tag=[call_number][local_port]
    [last_Call-ID:]
    [last_CSeq:]
    Content-Length: 0
]]>
</send>

<pause milliseconds="2000" />

<send retrans="500">
<![CDATA[
    SIP/2.0 200 OK
    [last_Via:]
    [last_From:]
    [last_To:];tag=[call_number][local_port]
    [last_Call-ID:]
    [last_CSeq:]
    Contact: <sip:[$uas_number]@[local_ip]:[local_port];user=phone>
    Content-Type: application/sdp
    Content-Length: [len]

    v=0
    o=tester 123456 654321 IN IP[local_ip_type] [local_ip]
    s=A conversation
    c=IN IP[local_ip_type] [local_ip]
    t=0 0
    m=audio [auto_media_port] RTP/AVP 8
    a=rtpmap:8 PCMA/8000
]]>
</send>


<recv request="ACK"></recv>

<nop hide="true">
<action>
	<exec rtp_stream="[media_path]/test.alaw,1,8" />
</action>
</nop>



<recv request="BYE">
</recv>

<send>
<![CDATA[
    SIP/2.0 200 OK
    [last_Via:]
    [last_From:]
    [last_To:]
    [last_Call-ID:]
    [last_CSeq:]
    Content-Length: 0
]]>
</send>

<pause milliseconds="2000" />

</scenario>