    {
      "Name": "rfc4028_refresh_session_by_update",
      "Description": "Проверка обновления сессий посредством UPDATE реквеста. Контроль включен на обеих сторонах. Ожидается, что адаптер будет слать UPDATE запросы в обе сессии.",
      "TestProcedure": [
        {
          "SendSSHCommand": [
            {
              "command1": "/domain/%%DEV_DOM%%/sip/user/set %%0.SipGroup%% %%0.Number%%@%%0.SipDomain%% rfc-4028-control true"
            }
          ]
        },
        {
          "StartUA": [
            {
              "Type": "User",
              "UserId": 0,
              "Name": "UAS_RECV_UPDATE",
              "Commands": [
                {
                  "SourceFile": "rfc4028_timers/uas_wait_update_refresh.xml",
                  "Options": "-m 1",
                  "SippType": "uas",
                  "Timeout": "200s"
                }
              ]
            },
            {
              "Type": "User",
              "UserId": 1,
              "WriteStat": true,
              "Name": "UAC_RECV_REFRESH_REQ",
              "Commands": [
                {
                  "SourceFile": "rfc4028_timers/uac_wait_update_refresh.xml",
                  "Options": "-m 1 -set CDPN %%0.Number%% -set CDPNDOM %%0.SipDomain%%",
                  "SippType": "uac",
                  "NeedAuth": true,
                  "Timeout": "200s"
                }
              ]
            }
          ]
        },
        {
          "SendSSHCommand": [
            {
              "command1": "/domain/%%DEV_DOM%%/sip/user/set %%0.SipGroup%% %%0.Number%%@%%0.SipDomain%% rfc-4028-control false"
            }
          ]
        }
      ]
    },
    {
