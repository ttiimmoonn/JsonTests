              "UserId": 1,
              "Name": "UAS_MAKE_TRANSFER",
              "Commands": [
                {
                  "SourceFile": "rfc4028_timers/uas_make_unatended_transfer.xml",
                  "Options": "-m 1 -set REFERNUM %%0.Number%% -set REFERDOM %%0.SipDomain%%",
                  "SippType": "uas",
                  "Timeout": "200s"
                }
              ]
            },
            {
              "Type": "User",
              "UserId": 2,
              "WriteStat": true,
              "Name": "UAC_RECV_ADDR_UPDATE_AND_REF",
              "Commands": [
                {
