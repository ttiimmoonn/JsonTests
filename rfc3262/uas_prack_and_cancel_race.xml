<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE scenario SYSTEM "sipp.dtd">
<scenario name = "UAS send asdp in 180">

<recv request="INVITE">
<action>
    <ereg regexp="(\w)*@" search_in="hdr" header="To:" assign_to="number" />
    <ereg regexp=".*" search_in="hdr" header="From:" assign_to="inv_from" />
    <ereg regexp=".*" search_in="hdr" header="To:" assign_to="inv_to" />
    <ereg regexp=".*" search_in="hdr" header="Call-ID:" assign_to="inv_call_id" />
    <ereg regexp=".*" search_in="hdr" header="Via:" assign_to="inv_via" />
    <ereg regexp="[0-9]+" search_in="hdr" header="CSeq:" assign_to="inv_cseq" />
    <assignstr assign_to="local_tag" value="[call_number][pid]"/>
</action>
</recv>

<recv request="INVITE">
<action>
    <ereg regexp="(\w)*@" search_in="hdr" header="To:" assign_to="number" />
    <ereg regexp=".*" search_in="hdr" header="From:" assign_to="inv_from" />
    <ereg regexp=".*" search_in="hdr" header="To:" assign_to="inv_to" />
    <ereg regexp=".*" search_in="hdr" header="Call-ID:" assign_to="inv_call_id" />
    <ereg regexp=".*" search_in="hdr" header="Via:" assign_to="inv_via" />
    <ereg regexp="[0-9]+" search_in="hdr" header="CSeq:" assign_to="inv_cseq" />
    <assignstr assign_to="local_tag" value="[call_number][pid]"/>
</action>
</recv>


<send>
<![CDATA[
    SIP/2.0 100 Trying
    [last_Via:]
    [last_From:]
    [last_To:]
    [last_Call-ID:]
    [last_CSeq:]
    Content-Length: 0
]]>
</send>

<send>
<![CDATA[
    SIP/2.0 100 Trying
    [last_Via:]
    [last_From:]
    [last_To:]
    [last_Call-ID:]
    [last_CSeq:]
    Content-Length: 0
]]>
</send>

<recv request="CANCEL"/>
<recv request="CANCEL"/>
<recv request="CANCEL"/>
<recv request="CANCEL"/>

<send>
<![CDATA[
    SIP/2.0 180 Ringing
    Via:[$inv_via]
    From:[$inv_from]
    To:[$inv_to];tag=[$local_tag]
    Call-ID:[$inv_call_id]
    CSeq: [$inv_cseq] INVITE
    Require: 100rel
    Rseq: [cseq]
    Contact: <sip:[$number][local_ip]:[local_port]>
    Content-Type: application/sdp
    Content-Length: [len]

    v=0
    o=tester 123456 654322 IN IP[local_ip_type] [local_ip]
    s=A conversation
    c=IN IP[local_ip_type] [local_ip]
    t=0 0
    m=audio [auto_media_port] RTP/AVP 0
    a=rtpmap:0 PCMU/8000
]]>
</send>


<recv request="PRACK">
    <action>
        <assign assign_to="sdp_chk" value="" />
        <ereg regexp="a=rtpmap:0 PCMU" search_in="msg" check_it="true" assign_to="sdp_chk" />
    </action>
</recv>


<recv request="PRACK">
    <action>
        <assign assign_to="sdp_chk" value="" />
        <ereg regexp="a=rtpmap:0 PCMU" search_in="msg" check_it="true" assign_to="sdp_chk" />
    </action>
</recv>

<send>
<![CDATA[
    SIP/2.0 200 OK
    Via:[$inv_via]
    From:[$inv_from]
    To:[$inv_to];tag=[$local_tag]
    Call-ID:[$inv_call_id]
    CSeq: [$inv_cseq] CANCEL
    Content-Length: 0
]]>
</send>

<send>
<![CDATA[
    SIP/2.0 487 Request Cancelled
    Via:[$inv_via]
    From:[$inv_from]
    To:[$inv_to];tag=[$local_tag]
    Call-ID:[$inv_call_id]
    CSeq: [$inv_cseq] INVITE
    Content-Length: 0
]]>
</send>

<recv request="ACK"/>

</scenario>
