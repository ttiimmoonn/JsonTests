<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE scenario SYSTEM "sipp.dtd">

<scenario name = "UAS chunt group delay тест">
<recv request="INVITE">
<action>
    <ereg regexp="[0-9]+" search_in="hdr" header="To:" assign_to="number" />
    <ereg regexp=".*" search_in="hdr" header="From:" assign_to="inv_from" />
    <ereg regexp=".*" search_in="hdr" header="To:" assign_to="inv_to" />
    <ereg regexp=".*" search_in="hdr" header="Call-ID:" assign_to="inv_call_id" />
    <ereg regexp=".*" search_in="hdr" header="Via:" assign_to="inv_via" />
    <ereg regexp=".*" search_in="hdr" header="CSeq:" assign_to="inv_cseq" />
    <assignstr assign_to="local_tag" value="[call_number][pid]"/>
</action>
</recv>

<send>
<![CDATA[
    SIP/2.0 100 Trying
    [last_Via:]
    [last_From:]
    [last_To:]
    [last_Call-ID:]
    [last_CSeq:]
    Content-Length: 0
]]>
</send>

<send>
<![CDATA[
    SIP/2.0 180 Ringing
    [last_Via:]
    [last_From:]
    [last_To:];tag=[$local_tag]
    [last_Call-ID:]
    [last_CSeq:]
    Require: 100rel
    Rseq: [cseq]
    Contact: <sip:[$number]@[local_ip]:[local_port]>
    Content-Type: application/sdp
    Content-Length: [len]

    v=0
    o=tester 123456 654321 IN IP[local_ip_type] [local_ip]
    s=A conversation
    c=IN IP[local_ip_type] [local_ip]
    t=0 0
    m=audio [auto_media_port] RTP/AVP 8
    a=rtpmap:8 PCMA/8000
]]>
</send>

<recv request="PRACK"></recv>

<send>
<![CDATA[
    SIP/2.0 200 OK
    [last_Via:]
    [last_From:]
    [last_To:]
    [last_Call-ID:]
    [last_CSeq:]
    Content-Length: 0
]]>
</send>

<pause milliseconds="500"/>
<send retrans="500">
<![CDATA[
    SIP/2.0 200 OK
    Via:[$inv_via]
    From:[$inv_from]
    To:[$inv_to];tag=[$local_tag]
    Call-ID:[$inv_call_id]
    CSeq:[$inv_cseq]
    Contact: <sip:[$number]@[local_ip]:[local_port];user=phone>
    Content-Length: 0
]]>
</send>


<recv request="ACK"></recv>

<nop hide="true">
   <action>
        <exec rtp_stream="/home/vragov/Work/sipp/sipp/sipp-3.4.1/pcap/test.alaw,-1,8" />
     </action>
</nop>

<recv request="BYE"></recv>

<send>
<![CDATA[
    SIP/2.0 200 OK
    [last_Via:]
    [last_From:]
    [last_To:]
    [last_Call-ID:]
    [last_CSeq:]
    Content-Length: 0
]]>
</send>

</scenario>
